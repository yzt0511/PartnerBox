<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="150vp"
    ohos:width="match_parent"
    ohos:orientation="horizontal">
    <Text
        ohos:id="$+id:home_info_title_txt"
        ohos:height="match_parent"
        ohos:weight="3"
        ohos:multiple_lines="true"
        ohos:text_size="18fp"
        ohos:text="Best Enterprise Wi-Fi Network Award of the Wireless Broadband Alliance 2020"
        ohos:width="match_content"/>
    <Image
        ohos:id="$+id:home_info_img"
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:scale_mode="zoom_center"
        ohos:image_src="$media:me_one"
        ohos:weight="2"/>
</DirectionalLayout>